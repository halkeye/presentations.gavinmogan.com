<div class="flex flex-wrap gap-10 items-stretch justify-center" id="presentations">
  {%- for p in collections.presentations | sort(attribute="data.date") | reverse %}

  <div
    class="presentation card bg-base-200 rounded-2xl w-full sm:w-[calc(50%-2.5rem)] lg:w-[calc(33.333%-2.5rem)]"
    data-has-slides={{ p | getSlides | toBool | toJSON }}
    data-has-recording={{ p | getRecording | toBool | toJSON }}
  >
    <figure class="h-60">
      <a href="{{ p.url }}">{% toImageTag p.data.image, p.data.title, [300], {class: "w-full object-cover"}%}</a>
    </figure>

    <div class="card-body flex flex-col gap-6">
      <div class="flex flex-col gap-2">
        <div class="flex flex-row gap-2 justify-between">
          <time class="font-mono text-sm uppercase text-info" datetime="{{ p.data.date | htmlDateString }}">
            {{ p.data.date | readableDate('MMM yyyy') }}
          </time>
          {% if p | getRecording | toBool or p | getSlides | toBool %}
          <div class="felx flex-row justify-self-end">
            {% if p | getRecording | toBool %}
            <a href="{{ p | getRecording | recordingURL }}" alt="Direct link to recording for {{ p.data.title }}">
            {% svgIcon 'static/assets/icon-has-video.svg', { class: "fill-blue-500 inline-block" } %}
            </a>
            {% endif %}
            {% if p | getSlides | toBool %}
            <a href="{{ p | getSlides }}" alt="Slides for {{ p.data.title }}">
              {% svgIcon 'static/assets/icon-has-notes.svg', { class: "fill-blue-500 inline-block" } %}
            </a>
            {% endif %}
          </div>
          {% endif %}
        </div>

        <h2 class="card-title font-body text-xl text-primary font-medium">
          <a href="{{ p.url }}">{{ p.data.title }}</a>
        </h2>
      </div>

      <div class="card-actions flex flex-wrap gap-3">
        {% for tag in p.data.tags | filterTagList %}
        <div class="badge badge-outline badge-info badge-lg rounded-full h-auto font-mono px-3 py-1">{{ tag | ucFirst
          }}</div>
        {% endfor %}
      </div>

      {% if links %}
      <div class="card-actions">
        {% for link in p.data.links %}
        <a role="button" href="{{link.url}}" class="btn {% if loop.first %}btn-primary{% else %}btn-secondary{% endif %}">{{ link.type | ucFirst }}</a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
  {%- endfor %}
</div>
