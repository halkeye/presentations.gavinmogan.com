<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		{#- Uncomment this if youâ€™d like folks to know that you used Eleventy to build your site!  #}
		<meta name="generator" content="{{ eleventy.generator }}">
		<link rel="stylesheet" href="/tailwind.css"/>
		<meta name="title" content="{{ title or metadata.title }}">
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://presentations.gavinmogan.com{{ page.url }}">
		<meta property="og:locale" content="en_US">
		<meta property="og:title" content="{{ title or metadata.title }}">
		{%- if image %}
		<meta property="og:image" content="https://presentations.gavinmogan.com{{ image }}">
		{%- endif %}
		<meta property="og:image:alt" content="{{ title or metadata.title }}">
		<meta name="twitter:card" content="summary">
		<meta name="twitter:url" content="https://presentations.gavinmogan.com/codecoffee-why-not-testing/">
		<meta name="twitter:title" content="{{ title or metadata.title }}">
		{%- if image %}
		<meta name="twitter:image" content="https://presentations.gavinmogan.com{{ image }}">
		{%- endif %}
		<meta name="twitter:image:alt" content="{{ title or metadata.title }}">
		<link rel="canonical" href="https://presentations.gavinmogan.com{{ page.url }}">

		<style>
			{% include "public/css/index.css" %}
		</style>
	</head>
	<body>
		<header>
			<a href="/" class="home-link">{{ metadata.title }}</a>
		</header>

		<main id="skip">
			{{ content | safe }}
		</main>

		<footer></footer>

		<!-- Current page: {{ page.url | htmlBaseUrl }} -->
	</body>
</html>
